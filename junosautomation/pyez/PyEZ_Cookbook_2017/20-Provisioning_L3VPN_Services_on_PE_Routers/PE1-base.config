    }
    login {
        user lab {
            uid 2000;
            class super-user;
            authentication {
                encrypted-password "$6$4UdNQUaA$2JCxTx1xGCdbNRsDws/JsAspMhCQTQp12L3okBtsWa.GYdtfwE9eKefLfUSjqS8DdfGwI8XH37Ob9E.DcfYvT0"; ## SECRET-DATA
